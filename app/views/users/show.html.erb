<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Hi <%= @user.first_name%> <%= @user.last_name%>!</h1>
    <p class="lead"></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Email</h5>
        <p class="card-text"><%= @user.email %></p>
        <a href="#" class="btn btn-primary">Modify</a>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text"><%= @user.description%></p>
        <a href="#" class="btn btn-primary">Modify</a>
      </div>
    </div>
  </div>
</div>
