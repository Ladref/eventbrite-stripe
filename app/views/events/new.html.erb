<html>
  <body>
    <!-- ... -->

    <%= form_tag url_for(action: "create"), method: "post" do %>
        <%= label_tag 'Title' %> <br />
        <%= text_field_tag 'title', @event.title %>
        <br /> <br />

        <%= label_tag 'Description' %><br />
        <%= text_field_tag 'description', @event.description %>
        <br /> <br />

        <%= label_tag 'Location' %><br />
        <%= text_field_tag 'location', @event.location %>
        <br /> <br />

        <%= label_tag 'Start date' %><br />
        <%= date_field_tag 'start_date', @event.start_date %>
        <br /> <br />

        <%= label_tag 'Duration in mins' %><br />
        <%= number_field_tag 'duration', @event.duration %>
        <br /> <br />

        <%= label_tag 'Price' %><br />
        <%= number_field_tag 'price', @event.price %>
        <br /> <br />

        <%= submit_tag "Submit event" %>
        <% end %>


    <% if @event.errors.any? %>
    <p>Please verify your event:</p>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>





    <!-- ... -->
  </body>
</html>
