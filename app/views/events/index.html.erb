<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eventbrite</h1>
    <p class="lead">Eventbrite is a global platform specializing in shared experiences that allows everyone to create, share, find and live events that nurture their passions and enrich their experiences.</p>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Link</th>
    </tr>
  </thead>

  <tbody>
    <%id = 0%>
    <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.description %></td>
      <td> <%= link_to "Join this event", event_path(event.id) %></td>
      <!-- event_path(event.id) -->
    <%id += 1%>
    </tr>
    <% end %>
  </tbody>

</table>
